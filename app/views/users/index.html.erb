<h3>Hosts In This Area</h3>

<div class="flex-container">
    <% @users.each do |user| %>
        <div class="card-product">
          <img src="<%= user.profile_picture_url %>">
            <h2><%= user.name %></h2>
            <p><%= user.bio %></p>
        <%#=user.name %>  <%= link_to user.username , user_path(user) %><br>
           <div id="button">
    <%= link_to 'Meet me', user_path(user), class: "btn btn-info" %>
           </div>
        </div>
    <% end %>
</div>


