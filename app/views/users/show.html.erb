<div id="flex-container">
   <div class="flex-grid">
      <div class="card">
         <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
               <div class="carousel-item active">
                <%= image_tag @user.profile_picture_url %>
                  <div class="centered">
                  </div>
               </div>
               <div class="carousel-item">
                  <div id="map"
                     style="width: 100%; height: 600px;"
                     data-markers="<%= @markers.to_json %>"
                     data-mapbox-api-key="pk.eyJ1IjoiZHVzYW4tcCIsImEiOiJja29lNzRqb3UwMXZhMnFvZzExYXZmYmxyIn0.X80PFeerveeNlOlkLrGWsw"></div>
               </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
         </div>
         <div class="card-body">
            <h3>A Quick Introduction </h3>
            <p class="card-text">
               <%= @user.bio %>
            </p>
         </div>
         <%= link_to "Talk To Me", { :controller => "chatrooms", :action => "start_chat", user: @user}, class: "btn primary-button" %>
         <div class="reviewcard">
            <div>
               <%= link_to "Add A Review", new_user_review_path(@user), class:"btn secondary-button" %>
            </div>
         </div>
      </div>
   </div>
</div>
</div>
<h3 class="mt-5">What other Quouchers have to say about <%= @user.name %></h3>
<% @reviews.each do |review| %>
<div class="review-card">
   <%= image_tag review.reviewer.profile_picture_url.nil? ? 'https://randomuser.me/api/portraits/women/6.jpg' : review.reviewer.profile_picture_url %>
   <blockquote class="blockquote mb-0">
      <p><%= review.content %></p>
      <p><%= '⭐️' * review.rating   %>
      <p><%= review.reviewer_id %></p>
      </p>
      <footer class="blockquote-footer"><%= review.reviewer.username %></footer>
   </blockquote>
</div>
</div>
<% end %>
<hr>
</div>